<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 6.1.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_6_1_0.dtd">
<service-builder package-path="com.lib">
	<author>Nam</author>
	<namespace>NewLib</namespace>
	<entity name="Book" local-service="true" remote-service="true" cache-enabled="false">
		<!-- PK fields -->
		<column name="bookId" type="long" primary="true" />
		<!-- Audit fields -->
		<column name="title" type="String" />
		<column name="description" type="String" />
		<column name="imageUrl" type="String" />
		<column name="category" type="String"></column>
		<column name="authors" type="Collection" entity="Author" mapping-table="Book_Author"/>
		<!-- Order -->
		<order by="asc">
			<order-column name="bookId" />
		</order>
		<!-- Finder methods -->
		<finder name="title" return-type="Collection">
			<finder-column name="title" />
		</finder>
	</entity>
	
	<entity name="Author" local-service="true" remote-service="true" cache-enabled="false">
		<!-- PK fields -->
		<column name="authorId" type="long" primary="true" />
		<!-- Audit fields -->
		<column name="name" type="String" />
		<column name="books" type="Collection" entity="Book" mapping-table="Book_Author" />
		<!-- Order -->
		<order by="asc">
			<order-column name="authorId" />
		</order>
		<!-- Finder methods -->
		<finder name="name" return-type="Collection">
			<finder-column name="name" />
		</finder>
	</entity>
</service-builder>
